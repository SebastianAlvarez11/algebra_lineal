<MostrarInventarioScreen>:
    GridLayout:
        cols: 1
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1  # Fondo oscuro
            Rectangle:
                size: self.size
                pos: self.pos


    BoxLayout:
        id: layout_root
        orientation: "vertical"
        spacing: 10
        padding: 10
        
        Label:
            text: "Inventario"
            font_size: 24
            bold: True

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10

    

        
                

