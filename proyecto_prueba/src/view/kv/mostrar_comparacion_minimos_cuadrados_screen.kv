<MostrarComparacionMinimosCuadradosScreen>:
    GridLayout:
        cols: 1
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1  # Fondo oscuro
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: [100, 20, 100, 20]

        

        ScrollView:
            size_hint_y: 0.75
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: layout_root_mc
                cols: 4
                spacing: [20, 10]
                row_default_height: 40
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height
                padding: [10, 10]

    
        Label:      
            id: resultado_label_mc
            text: ''
            font_size: 16
            markup: True
            size_hint_y: None
            height: self.texture_size[1] + 20
            text_size: self.width, None
            halign: 'left'
            valign: 'top'


        Image:
            id: imagen_comparacion_mc
            size_hint_y: None
            height: 350
            allow_stretch: True
            keep_ratio: True

    
        Button:
            text: "Volver"
            background_normal: ''
            background_down: ''
            background_color: 1, 0.44, 0.26, 1  # Naranja
            color: 1, 1, 1, 1  # Texto blanco
            size_hint_y: None
            height: "50dp"
            font_size: 16
            on_press: root.volver_al_menu()

            

